<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
        Width="500" Height="600" CanResize="False"
        x:Class="rec_tool.SettingsWindow"
        Title="Settings">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
        <Label HorizontalAlignment="Center" Content="Current IP" Margin="5"></Label>
        <TextBox x:Name="IpTextBox"></TextBox>
        <Button HorizontalAlignment="Center" x:Name="IpButton" Content="Set IP" Click="IpButton_OnClick" Margin="8"></Button>
    </StackPanel>
</Window>