<Window x:Class="rec_tool.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
       xmlns:local="clr-namespace:rec_tool"
       mc:Ignorable="d"
       Title="Rec Tool by @meltedm_ - v0.5.0a" 
       MinWidth="1100" MinHeight="720" Width="1100" Height="720"
       DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Top" Margin="5,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Menu Grid.Row="0">
                    <MenuItem Header="File">
                        <MenuItem x:Name="Open" Header="Open" Click="Open_Click" />
                        <Separator />
                        <MenuItem x:Name="ExitMenuItem" Header="Exit" Click="ExitMenuItem_Click" />
                    </MenuItem>
                    <MenuItem Header="View" >
                        <MenuItem Header="Settings" />
                    </MenuItem>
                    <MenuItem Header="Support">
                        <MenuItem Header="Documentation" />
                        <MenuItem Header="About Us" />
                    </MenuItem>
                </Menu>
                <Label Grid.Column="1" x:Name="ServerDataInfo" VerticalAlignment="Center" Margin="0,3,10,0" Content="Waiting for server..." />
                <Button x:Name="StartServer" Grid.Column="2" Content="Start Server" Margin="0,0,10,0" VerticalAlignment="Center" Click="StartServer_OnClick" IsEnabled="False" />
            </Grid>
            <Grid Margin="10,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="321*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="246*"/>
                    </Grid.RowDefinitions>
                    <vlc:VideoView x:Name="VideoView" Grid.Row="0" Visibility="Hidden" />
                    <Slider x:Name="TimeSlider" Maximum="100" Minimum="0" Orientation="Horizontal" Grid.Row="1" IsEnabled="False"
                            ValueChanged="TimeSlider_ValueChanged" Opacity="0.25" />
                    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button x:Name="PlayButton" Content="Play Video" Grid.Row="1" Click="PlayVideo_Click" IsEnabled="False" />
                        <Button x:Name="StartRecording" Content="Start Recording" Grid.Row="1" Click="StartRecording_Click" Margin="5,0,10,0" IsEnabled="False" />
                        <Label x:Name="TimeLabel" Content="Map Time: 00:00ms / 00:00ms" VerticalContentAlignment="Center" />
                    </StackPanel>
                    <Label Content="Generated RECS" Height="30" Grid.Row="3" />
                    <DataGrid x:Name="RECSDataContext" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="4" Margin="0,10,0,0"/>
                </Grid>
                <Grid Grid.Column="1" Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="640*" />
                    </Grid.RowDefinitions>
                    <Label Content="Complete Recorded Data" Height="30" Grid.Row="0"/>
                    <DataGrid x:Name="RecordedDataContext" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="1" Margin="0,10,0,0" />
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>