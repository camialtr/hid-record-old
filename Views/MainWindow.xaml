<Window x:Class="rec_tool.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
       xmlns:local="clr-namespace:rec_tool"
       mc:Ignorable="d"
       Title="Rec Tool by @meltedm_ - v0.5.0a" 
       MinWidth="1100" MinHeight="720" Width="1100" Height="720"
       DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Menu Grid.Row="0">
                    <MenuItem Header="File">
                        <MenuItem x:Name="Open" Header="Open" Click="Open_Click" />
                        <Separator />
                        <MenuItem x:Name="ExitMenuItem" Header="Exit" Click="ExitMenuItem_Click" />
                    </MenuItem>
                    <MenuItem Header="View" >
                        <MenuItem Header="Settings" />
                    </MenuItem>
                    <MenuItem Header="Support">
                        <MenuItem Header="Documentation" />
                        <MenuItem Header="About Us" />
                    </MenuItem>
                </Menu>
                <Label Grid.Column="1" x:Name="ServerDataInfo" VerticalAlignment="Center" Margin="0,0,10,0" Content="Waiting for server..." />
                <Button x:Name="StartServer" Grid.Column="2" Content="Start Server" Margin="0,0,10,0" VerticalAlignment="Center" Click="StartServer_OnClick"
                        IsEnabled="False" />
            </Grid>
            <Grid Margin="10,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="0,0,10,0" RenderTransformOrigin="0.486,0.297">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="349*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="245*"/>
                    </Grid.RowDefinitions>
                    <vlc:VideoView x:Name="VideoView" Grid.Row="0" Visibility="Hidden" />
                    <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button x:Name="StartRecording" Content="Start Recording" Grid.Row="1" Click="StartRecording_Click" Margin="5,0,10,0" IsEnabled="False" />
                        <Label x:Name="TimeLabel" Content="Map Time: 00:00ms / 00:00ms" VerticalContentAlignment="Center" />
                    </StackPanel>
                    <Label Content="Generated RECS" MinHeight="25" MaxHeight="30" VerticalAlignment="Bottom" VerticalContentAlignment="Top" Grid.Row="2"/>
                    <DataGrid x:Name="RECSDataContext" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="3" />
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="640*" />
                    </Grid.RowDefinitions>
                    <Label Content="Complete Recorded Data" MinHeight="25" MaxHeight="30" VerticalAlignment="Bottom" VerticalContentAlignment="Top" Grid.Row="0"/>
                    <DataGrid x:Name="RecordedDataContext" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="1"  />
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>