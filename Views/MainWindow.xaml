<Window x:Class="rec_tool.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
       xmlns:local="clr-namespace:rec_tool"
       mc:Ignorable="d"
       Title="Rec Tool by @meltedm_ - v0.5.0a" 
       MinWidth="1100" MinHeight="720" Width="1100" Height="720">
    <Grid>
        <DockPanel LastChildFill="True">
            <Grid DockPanel.Dock="Top" Margin="5,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Menu Grid.Row="0">
                    <MenuItem Header="File">
                        <MenuItem Header="Open" />
                        <Separator />
                        <MenuItem x:Name="ExitMenuItem" Header="Exit" Click="ExitMenuItem_Click" />
                    </MenuItem>
                    <MenuItem Header="View" >
                        <MenuItem Header="Settings" />
                    </MenuItem>
                    <MenuItem Header="Support">
                        <MenuItem Header="Documentation" />
                        <MenuItem Header="About Us" />
                    </MenuItem>
                </Menu>
                <Label Grid.Column="1" x:Name="ServerDataInfo" VerticalAlignment="Center" Margin="0,3,10,0" Content="Waiting for server..." />
                <Button x:Name="StartServer" Grid.Column="2" Content="Start Server" Margin="0,0,10,0" VerticalAlignment="Center" Click="StartServer_OnClick" />
            </Grid>
            <Grid Margin="10,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <vlc:VideoView x:Name="VideoView" Grid.Row="0" Visibility="Hidden" Margin="48,0,48,0"/>
                    <Button x:Name="PlayButton" Content="Play" Grid.Row="1" Click="PlayVideo_Click"/>
                </Grid>
                <Grid Grid.Column="1" Margin="0,0,0,0">
                    <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}"/>
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>